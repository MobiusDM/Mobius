# Mobius MDM Configuration

# Database Configuration
MOBIUS_MYSQL_ADDRESS=127.0.0.1:3306
MOBIUS_MYSQL_DATABASE=mobius
MOBIUS_MYSQL_USERNAME=mobius
MOBIUS_MYSQL_PASSWORD=insecure

# Server Configuration
MOBIUS_SERVER_ADDRESS=0.0.0.0:8080
MOBIUS_SERVER_CERT=/etc/mobius/server.cert
MOBIUS_SERVER_KEY=/etc/mobius/server.key

# Authentication
MOBIUS_AUTH_JWT_KEY=your-jwt-secret-key-here
MOBIUS_AUTH_BCRYPT_COST=12

# Redis (for sessions and caching)
MOBIUS_REDIS_ADDRESS=127.0.0.1:6379

# Logging
MOBIUS_LOGGING_JSON=true
MOBIUS_LOGGING_DEBUG=false

# Ansible Integration
ANSIBLE_INVENTORY_PATH=/path/to/ansible-mdm/inventory
ANSIBLE_PLAYBOOK_PATH=/path/to/ansible-mdm
ANSIBLE_HOST_KEY_CHECKING=false

# Mobius Specific
MOBIUS_LICENSE_KEY=
MOBIUS_VULNERABILITIES_DATABASES_PATH=/tmp/vulndbs

# Email Configuration (optional)
MOBIUS_EMAIL_BACKEND=smtp
MOBIUS_SMTP_SERVER=localhost
MOBIUS_SMTP_PORT=587
MOBIUS_SMTP_USERNAME=
MOBIUS_SMTP_PASSWORD=
MOBIUS_SMTP_TLS=true
